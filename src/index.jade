doctype html
html(lang="en")
  head
    title= ":event_name"
    meta(name="viewport", content="width=device-width,user-scalable=no,maximum-scale=1.0,initial-scale=1.0")
    script(type='text/javascript', src='javascripts/lib/jquery-1.11.2.min.js')
    script(type='text/javascript', src='javascripts/lib/velocity.min.js')
    script(type='text/javascript', src='javascripts/lib/hammer.min.js')
    script(type='text/javascript', src='javascripts/app.js')
    link(rel='stylesheet', type='text/css', href='styles/main.css')
  body
    .loader.center-this
    .content-container
      .draggable-card-container
        ul.inner-container
          li
            img.scrolling-envelope(alt="", src="img/envelope.png")
          li.hammer-me
            img.draggable-card(alt="", src="img/card.png")
          li
            img(alt="", src="img/insert1.png")
          li
            img(alt="", src="img/insert2.png")
      .card-holder
        .card-image-holder
          img.main-card.js-card-image(alt="", src="img/card.png")
          img.insert(alt="", src="img/insert1.png")
          img.insert.space-img(alt="", src="img/insert2.png")
          img.envelope(alt="", src="img/envelope.png")
      .actions-container
        .event-info
          .subhead.please-rsvp-header.helvetica-light.
            Please RSVP for
          .event-name.garamond-italic.
            Huzzah!
          .event-host.helvetica-light Hosted by: Stampy and Envelette
        .status-container.none
          .status-border
          .attending-status.garamond-italic.
            You are attending.
          .change-response.helvetica-light.
            Change response
        .attending-actions
          .will-attend.action.helvetica-light
            .text.
              Will Attend
            .attending-check
          .will-not-attend.action.helvetica-light Will Not Attend
      .event-details.helvetica-light
        .event-date.
          Saturday, 12th Feb, 2015
        .event-time.
          7PM at Waterfront Tavern
        .event-location.
          115 Atlantic Avenue, Brooklyn, NY
      .placeholder-container
        - var n = 0
        while n < 4
          -n++
          .placeholder-box
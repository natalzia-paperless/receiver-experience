doctype html
html(lang="en")
  head
    title= ":event_name"
    meta(name="viewport", content="width=device-width,user-scalable=no,maximum-scale=1.0,initial-scale=1.0")
    script(type='text/javascript', src='javascripts/lib/jquery-1.11.2.min.js')
    script(type='text/javascript', src='javascripts/lib/velocity.min.js')
    script(type='text/javascript', src='javascripts/lib/hammer.min.js')
    script(type='text/javascript', src='javascripts/app.js')
    link(rel='stylesheet', type='text/css', href='styles/main.css')
  body
    .loader.center-this
    .content-container
      .draggable-card-container
        .js-flip-button.flip-button.
          Flip me
        ul.inner-container
          li
            img(alt="", src="img/envelope.png")
          li.hammer-me
            .flippable.draggable-card(alt="", src="img/card.png")
              img.front(alt="", src="img/card.png")
              img.back(alt="", src="img/card_back.png")
      .card-holder
        .card-image-holder.js-card-image
          .card-image.flippable
            img.front(alt="", src="img/card.png")
            img.back(alt="", src="img/card_back.png")
          img.envelope(alt="", src="img/envelope.png")
      .actions-container
        .center-this
          .event-info
            .subhead.helvetica-light.
              Please RSVP for
            .event-name.garamond-italic.
              Huzzah!
            .event-host.helvetica-light Hosted by: Stampy and Envelette
          .attending-actions
            .will-attend.action.helvetica-light Will Attend
            .will-not-attend.action.helvetica-light Will Not Attend
      .event-details.helvetica-light
        .event-date.
          Saturday, 12th Feb, 2015
        .event-time.
          7PM at Waterfront Tavern
        .event-location.
          115 Atlantic Avenue, Brooklyn, NY
      .placeholder-container
        - var n = 0
        while n < 4
          -n++
          .placeholder-box
